# AI Pal Configuration Example
# Copy this file to .env and fill in your values

# ============================================================================
# API Keys (Optional - for cloud LLM access)
# ============================================================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
COHERE_API_KEY=

# ============================================================================
# Local Model Configuration
# ============================================================================
# Path to local models directory
LOCAL_MODELS_PATH=./models

# Default local model to use (e.g., "mistral-7b-instruct", "llama2-7b")
DEFAULT_LOCAL_MODEL=

# Hardware preferences
USE_GPU=true
MAX_GPU_MEMORY=0.8  # Use up to 80% of available GPU memory
CPU_THREADS=4

# ============================================================================
# Privacy & Security
# ============================================================================
# Enable PII scrubbing (highly recommended)
ENABLE_PII_SCRUBBING=true

# Encryption key for local data storage (auto-generated if not set)
ENCRYPTION_KEY=

# Maximum days to retain conversation history
MAX_HISTORY_DAYS=90

# ============================================================================
# Module Configuration
# ============================================================================
# Enable/disable specific modules
ENABLE_ETHICS_MODULE=true
ENABLE_ECHO_CHAMBER_BUSTER=true
ENABLE_LEARNING_MODULE=true
ENABLE_DREAM_MODULE=true
ENABLE_PERSONAL_DATA_MODULE=true

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite:///./data/ai_pal.db

# Redis for caching and task queue (optional)
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# API Server Configuration
# ============================================================================
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=false

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_pal.log

# ============================================================================
# Agency Calculus (AC-AI) Framework Configuration
# ============================================================================
# Enable Four Gates checks
ENABLE_FOUR_GATES=true

# Minimum acceptable agency delta
MIN_AGENCY_DELTA=0.0

# Circuit breaker thresholds
MAX_EPISTEMIC_DEBT=0.3
MIN_BHIR=1.0
MAX_GOODHART_DIVERGENCE=0.2

# ============================================================================
# Dream Module Configuration
# ============================================================================
# When to run dream processing (cron format: minute hour day month weekday)
DREAM_SCHEDULE=0 3 * * *  # 3 AM daily

# Dream processing duration (minutes)
DREAM_DURATION=60

# ============================================================================
# Learning Module Configuration
# ============================================================================
# Default VARK learning style (Visual, Aural, Read, Kinesthetic, or "detect")
DEFAULT_VARK_STYLE=detect

# Learning velocity tracking window (days)
LEARNING_VELOCITY_WINDOW=7
